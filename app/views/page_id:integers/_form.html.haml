= form_for @page_id:integer do |f|
  - if @page_id:integer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page_id:integer.errors.count, "error")} prohibited this page_id:integer from being saved:"
      %ul
        - @page_id:integer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :x1
    = f.number_field :x1
  .field
    = f.label :y1
    = f.number_field :y1
  .field
    = f.label :x2
    = f.number_field :x2
  .field
    = f.label :y2
    = f.number_field :y2
  .field
    = f.label :color
    = f.text_field :color
  .actions
    = f.submit 'Save'
